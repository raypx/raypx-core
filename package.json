{
  "name": "raypx",
  "version": "0.1.0",
  "private": true,
  "description": "A modern web application built with Next.js and TypeScript",
  "homepage": "https://raypx.com",
  "bugs": {
    "url": "https://github.com/raypx/raypx/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raypx/raypx.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Raypx",
    "email": "support@raypx.com"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/**",
      "tooling/*",
      "scripts"
    ],
    "catalog": {
      "@types/node": "^24.3.0",
      "hono": "^4.9.2",
      "lucide-react": "^0.542.0",
      "next": "^15.5.2",
      "typescript": "^5.9.2",
      "vite": "^7.1.3",
      "vitest": "^3.2.4",
      "zod": "^4.1.3"
    },
    "catalogs": {
      "react19": {
        "@types/react": "^19.1.11",
        "@types/react-dom": "^19.1.8",
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
      }
    }
  },
  "scripts": {
    "audit": "bun audit",
    "build": "turbo build",
    "changeset": "changeset",
    "check": "biome check",
    "clean": "turbo run clean",
    "coverage": "vitest --coverage",
    "dedupe": "bun pm dedupe",
    "dev": "turbo dev",
    "format": "biome check --write",
    "preinstall": "npx only-allow bun",
    "postinstall": "raypx-scripts postinstall",
    "prepare": "husky",
    "shadcn": "bun --filter @raypx/web run shadcn && bun -w format",
    "test": "turbo test --cache-dir=.turbo",
    "turbo:gen": "turbo gen",
    "update:deps": "bun update --recursive --interactive --latest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@raypx/scripts": "workspace:*",
    "@turbo/gen": "^2.5.6",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "zod": "catalog:"
  },
  "packageManager": "bun@1.2.21",
  "engines": {
    "node": ">=20",
    "bun": ">=1.0.0"
  }
}
