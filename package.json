{
  "name": "raypx",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "A modern web application built with Next.js and TypeScript",
  "homepage": "https://raypx.com",
  "bugs": {
    "url": "https://github.com/raypx/raypx/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raypx/raypx.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Raypx",
    "email": "support@raypx.com"
  },
  "scripts": {
    "audit": "pnpm audit",
    "build": "turbo build",
    "changeset": "changeset",
    "check": "biome check",
    "clean": "turbo run clean",
    "coverage": "vitest --coverage",
    "dedupe": "pnpm dedupe",
    "dev": "turbo dev",
    "format": "biome check --write",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "raypx-scripts postinstall",
    "prepare": "husky",
    "shadcn": "pnpm --filter @raypx/web run shadcn && pnpm -w format",
    "test": "vitest",
    "turbo:gen": "turbo gen",
    "update:deps": "pnpm update --recursive --interactive --latest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@raypx/scripts": "workspace:*",
    "@turbo/gen": "^2.5.6",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vite": "catalog:",
    "vitest": "^3.2.4",
    "zod": "catalog:"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10.0.0"
  }
}
